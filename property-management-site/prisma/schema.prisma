generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Lead {
  id        Int        @id @default(autoincrement())
  email     String
  phone     String
  service   String
  price     Int
  status    LeadStatus @default(NEW)
  createdAt DateTime   @default(now())

  payments Payment[]
}

model Payment {
  id              Int      @id @default(autoincrement())
  leadId          Int
  provider        String
  status          String
  amount          Int
  currency        String
  stripeSessionId String?  @unique
  createdAt       DateTime @default(now())

  lead Lead @relation(fields: [leadId], references: [id])
}

enum LeadStatus {
  NEW
  PAID
  CANCELLED
}
