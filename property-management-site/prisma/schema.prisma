generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Block {
  id           Int     @id @default(autoincrement())
  address      String
  name         String?
  floors       Int?
  contactName  String?
  contactPhone String?
  contactEmail String?

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  apartments Apartment[]

  @@index([address])
}

model Apartment {
  id      Int @id @default(autoincrement())
  blockId Int

  number   String
  floor    Int?
  entrance String?

  ownerName  String?
  ownerPhone String?
  ownerEmail String?

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  block    Block     @relation(fields: [blockId], references: [id])
  payments Payment[]

  @@unique([blockId, number, entrance])
  @@index([blockId])
}

model Payment {
  id          Int @id @default(autoincrement())
  apartmentId Int

  provider String
  method   PaymentMethod @default(OTHER)
  status   PaymentStatus @default(PENDING)

  amount   Int
  currency String

  periodYear  Int?
  periodMonth Int?

  stripeSessionId String? @unique

  paidAt    DateTime?
  reference String?
  note      String?
  createdBy String?

  createdAt DateTime @default(now())

  apartment Apartment @relation(fields: [apartmentId], references: [id])

  @@unique([apartmentId, periodYear, periodMonth, provider], map: "uniq_period_provider_per_apartment")
  @@index([apartmentId])
  @@index([provider, status])
  @@index([periodYear, periodMonth])
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
  CANCELED
}

enum PaymentMethod {
  STRIPE
  EASYPAY_OFFICE
  EPAY_ONLINE
  CASH
  BANK
  OTHER
}
